<?xml version='1.0' encoding='utf-8'?>
    <widget id="com.facturaloperu.appfacturalo" android-packageName="com.facturaloperu.appfacturalo" version="3.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <preference name="android-minSdkVersion" value="31"/>
    <preference name="android-targetSdkVersion" value="32"/>
    <preference name="android-compileSdkVersion" value="32"/>
    <preference name="DisallowOverscroll" value="true"/>
    <hook src="hooks/hookers.js" type="before_prepare"/>
    <hook src="hooks/beforedep.js" type="before_deploy"/>
    <name>FacturaloPeru</name>
    <description>
        Aplicacion de facturacion electronica
    </description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
        Facturalo Peru Team
    </author>
    <content src="index.html"/>
    <access origin="*"/>
    <allow-intent href="http://*/*"/>
    <allow-intent href="https://*/*"/>
    <allow-intent href="tel:*"/>
    <allow-intent href="sms:*"/>
    <allow-intent href="mailto:*"/>
    <allow-intent href="geo:*"/>
    <platform name="android">
        <allow-intent href="market:*"/>
        <icon src="res/icon/icon.png"/>
        <preference name="android-targetSdkVersion" value="32"/>
        <preference name="android-minSdkVersion" value="31"/>
        <access launch-external="yes" origin="whatsapp//*"/>
    </platform>
    <platform name="ios">
        <splash src="res/screen/ios/Default@2x~universal~anyany.png"/>
        <allow-intent href="itms:*"/>
        <allow-intent href="itms-apps:*"/>
    </platform>
    <config-file target="AndroidManifest.xml" parent="/*" xmlns:android="http://schemas.android.com/apk/res/android">
        <uses-permission android:name="android.permission.BLUETOOTH_CONNECT"/>
    </config-file>
    <edit-config file="app/src/main/AndroidManifest.xml" mode="merge" target="/manifest/application" xmlns:android="http://schemas.android.com/apk/res/android">
        <application android:usesCleartextTraffic="true" android:requestLegacyExternalStorage="true"/>
    </edit-config>
    <allow-navigation href="*"/>
</widget>
